                    <Image
                      src={project.cover.filename}
                      alt=""
                      width="1920"
                      height="1080"
                      widths={[768, 1024, 1280, 1536, 1920]}
                      sizes="(min-width: 1280px) 28vw, (min-width: 1024px) 38vw, (min-width: 768px) 62vw, 95vw"
                      class="h-full w-full object-cover"
                      format="webp"
                      inferSize
                    />
                  )}
                  {/* <div class="absolute left-4 top-4 rounded-2xl bg-white/80 p-2 font-bold">
                  {index}
                </div> */}
