---
export const animation = {
  old: {
    name: 'hero-out',
    duration: '2s',
    easing: 'linear',
    fillMode: 'both',
  },
  new: {
    name: 'hero-in',
    duration: '2s',
    easing: 'linear',
    fillMode: 'both',
  },
}

export const transition = {
  forwards: animation,
  backwards: animation,
}
---

<style is:global>
  @keyframes hero-in {
    0% {
      opacity: 0;
      /* transform: scale(1) translateX(200px); */
    }
    100% {
      opacity: 1;
      /* transform: scale(1) translateX(0); */
    }
  }
  @keyframes hero-out {
    0% {
      opacity: 1;
      /* transform: scale(1) translateX(200px); */
    }
    100% {
      opacity: 0;
      /* transform: scale(1) translateX(0); */
    }
  }
</style>
